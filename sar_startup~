export et="$(ifconfig | grep eth | cut -d' ' -f1)"

sudo ifconfig $et 192.168.1.25

export ROS_IP="$(/sbin/ifconfig eth | grep 'inet addr:' | cut -d: -f2 | awk '{print $1}')"

source /opt/ros/hydro/setup.bash

# start roscore
roscore &
sleep 2

# start rosbridge (required for the tablet connection)
roslaunch rosbridge_server rosbridge_websocket.launch &

