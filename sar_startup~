# change the ifconfig to hard-coded one
sudo ifconfig eth2 192.168.1.25

# ensures the ROS_IP reflects this new
export ROS_IP="$(/sbin/ifconfig eth2 | grep 'inet addr:' | cut -d: -f2 | awk '{print $1}')"

# start roscore
roscore &
sleep 2

# start rosbridge (required for the tablet connection)
roslaunch rosbridge_server rosbridge_websocket.launch &

